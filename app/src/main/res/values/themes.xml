    <style name="Base.Theme.CCS2AndroidHMI" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/hmi_font_family</item>
        <item name="android:fontFamily">@font/hmi_font_family</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
    </style>

    <style name="Theme.CCS2AndroidHMI" parent="Base.Theme.CCS2AndroidHMI" />
    <style name="AppTheme.CustomButtonTheme" parent="Theme.CCS2AndroidHMI">
        <item name="android:backgroundTint">@color/green</item>
    </style>
    <style name="CommonButtonTheme">
        <item name="android:background">@drawable/bg_button_gradient_with_white_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_5ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="HistoryTableHeaderTheme">
        <item name="android:background">@drawable/bg_grey_rect_with_white_border</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="android:lines">2</item>
    </style>
    <style name="HistoryTableColumnsTheme">
        <item name="android:background">@drawable/bg_black_rect_with_white_border</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_6ssp</item>
        <item name="android:lines">2</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_black_round_rect_with_white_border</item>
    </style>
</resources>